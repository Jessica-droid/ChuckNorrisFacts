<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemLista" parent="TextAppearance.AppCompat">
        <item name="fontFamily">serif</item>
        <item name="android:textColor">@color/cinza_medio</item>
    </style>

    <style name="ItemLista.Categoria" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/quase_branco</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
